# /Users/radiant/Desktop/RXinDexer/deploy/config.production.env
# This file contains production environment configuration values.
# These values are used to generate the final .env file during deployment.

# Deployment Settings
ENVIRONMENT=production

# Radiant Node Settings
RADIANT_NODE_URL=http://radiant
RADIANT_RPC_USER=rxin
RADIANT_RPC_PASSWORD=secure_production_password
RADIANT_RPC_PORT=7332

# Database Settings
DB_HOST=db
DB_PORT=5432
DB_NAME=rxindexer
DB_USER=postgres
DB_PASSWORD=secure_production_db_password

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=secure_production_redis_password

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4

# Sync Settings
SYNC_BATCH_SIZE=100
SYNC_START_HEIGHT=0

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=rxindexer.log

# Docker Settings
POSTGRES_VOLUME=postgres-data-prod
REDIS_VOLUME=redis-data-prod
RADIANT_VOLUME=radiant-data-prod
