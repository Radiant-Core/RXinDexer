# /Users/radiant/Desktop/RXinDexer/deploy/config.staging.env
# This file contains staging environment configuration values.
# These values are used to generate the final .env file during staging deployment.

# Deployment Settings
ENVIRONMENT=staging

# Radiant Node Settings
RADIANT_NODE_URL=http://radiant
RADIANT_RPC_USER=rxin
RADIANT_RPC_PASSWORD=staging_password
RADIANT_RPC_PORT=7332

# Database Settings
DB_HOST=db
DB_PORT=5432
DB_NAME=rxindexer_staging
DB_USER=postgres
DB_PASSWORD=staging_db_password

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=staging_redis_password

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_WORKERS=2

# Sync Settings
SYNC_BATCH_SIZE=50
SYNC_START_HEIGHT=0

# Logging Settings
LOG_LEVEL=DEBUG
LOG_FILE=rxindexer_staging.log

# Docker Settings
POSTGRES_VOLUME=postgres-data-staging
REDIS_VOLUME=redis-data-staging
RADIANT_VOLUME=radiant-data-staging
