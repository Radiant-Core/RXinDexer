# /Users/radiant/Desktop/RXinDexer/.env.example
# This file serves as a template for environment variables needed by RXinDexer.
# Copy this file to .env and update the values with your specific configuration.

# Radiant Node RPC Connection
RADIANT_RPC_URL=http://localhost:7332
RADIANT_RPC_USER=rxin
RADIANT_RPC_PASSWORD=securepassword

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rxindexer
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_WORKERS=4

# Sync Settings
SYNC_BATCH_SIZE=100
SYNC_START_HEIGHT=0

# Logging
LOG_LEVEL=INFO
LOG_FILE=rxindexer.log
