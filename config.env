# ElectrumX Configuration for Radiant
# Copy this file to .env and edit with your settings

# Radiant Core RPC connection
DAEMON_URL=http://YOUR_RPC_USER:YOUR_RPC_PASSWORD@localhost:7332/

# Network settings
COIN=Radiant
NET=mainnet

# Database (rocksdb recommended for production)
DB_ENGINE=rocksdb
DB_DIRECTORY=/data/electrumdb

# Services to expose
SERVICES=tcp://0.0.0.0:50010,ssl://0.0.0.0:50012,wss://0.0.0.0:50011,rpc://127.0.0.1:8001

# SSL certificates (required for SSL service)
SSL_CERTFILE=/data/electrumdb/server.crt
SSL_KEYFILE=/data/electrumdb/server.key

# Performance
REQUEST_TIMEOUT=60
CACHE_MB=2000
MAX_SESSIONS=10000
MAX_SEND=10000000
MAX_RECV=10000000

# Security - rate limiting (DO NOT set to 0 in production)
COST_SOFT_LIMIT=1000
COST_HARD_LIMIT=10000

# REST API (HTTP)
REST_API_ENABLED=1
REST_API_HOST=0.0.0.0
REST_API_PORT=8000
# Required in production (ELECTRUMX_ENV=prod)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
REST_API_KEY=change_me
