# ElectrumX Configuration for Radiant
# Copy this file to .env and edit with your settings

# Radiant Core RPC connection
DAEMON_URL=http://YOUR_RPC_USER:YOUR_RPC_PASSWORD@localhost:7332/

# Network settings
COIN=Radiant
NET=mainnet

# Database (rocksdb recommended for production)
DB_ENGINE=rocksdb
DB_DIRECTORY=/root/electrumdb

# Services to expose
SERVICES=tcp://0.0.0.0:50010,ssl://0.0.0.0:50012,wss://0.0.0.0:50011,rpc://0.0.0.0:8000

# SSL certificates (required for SSL service)
SSL_CERTFILE=/root/electrumdb/server.crt
SSL_KEYFILE=/root/electrumdb/server.key

# Performance
REQUEST_TIMEOUT=60
CACHE_MB=2000
MAX_SESSIONS=10000
MAX_SEND=10000000
MAX_RECV=10000000

# Security - rate limiting (DO NOT set to 0 in production)
COST_SOFT_LIMIT=1000
COST_HARD_LIMIT=10000

# Run as root in Docker
ALLOW_ROOT=true
